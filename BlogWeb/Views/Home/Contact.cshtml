@model EntityLayer.Dtos.EmailSendDto
@{
     Layout = "_ContactLayout";
     ViewBag.Title = "İletişim";
     ViewBag.Description = "Bizlerle iletişime geçin. Fatih's Blog";
     ViewBag.Tags = "Contact, Contact Us, Bizle İletişime Geçin,İletişim";
     ViewBag.Author = "Fatih's Blog";
 }
<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form asp-controller="Home" asp-action="Contact" method="post">
        <h3>Bizlere bir mesaj bırakın</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="İsminiz" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="E-Posta Adresiniz" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Konu / Başlık" asp-for="Subject" />
                    <span class="text-danger" asp-validation-for="Subject"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btnContact">Gönder</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea class="form-control" placeholder="Mesajınız..." asp-for="Message" style="width: 100%; height: 150px;"></textarea>
                    <span class="text-danger" asp-validation-for="Message"></span>
                </div>
            </div>
        </div>
    </form>
</div>