
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8">
    <meta name="description" content="Programcılar ve Yazılımcılar için Türkçe Kaynak, Rehber ve İçerikler">
    <meta name="author" content="Fatih'sBlog">
    <meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <title>@ViewBag.Title | Fatih's Blog</title>

    <script>
        addEventListener("load",
            function () {
                setTimeout(hideURLbar, 0);
            },
            false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

    @await Html.PartialAsync("_LayoutCssPartial")
</head>

<body>
    <!--Header-->
    <header>
        <div class="top-bar_sub_w3layouts container-fluid">
            <div class="row">
                <div class="col-md-4 logo text-left">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <i class="fab fa-linode"></i> Fatih's Blog
                    </a>
                </div>
                @await Html.PartialAsync("_LayoutHeaderLoginPartial")
                <div class="col-md-4 log-icons text-right">
                    <ul class="social_list1 mt-3">
                        <li>
                            <a href="#" class="facebook1 mx-2">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="twitter2">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="dribble3 mx-2">
                                <i class="fab fa-dribbble"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="pin">
                                <i class="fab fa-pinterest-p"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        @await Html.PartialAsync("_LayoutHeaderMenuPartial")
    </header>
    <!--//header-->
    <!--/banner-->
    @await Html.PartialAsync("_LayoutSliderPartial")
    <!--//banner-->
    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            @*<h3 class="tittle">Son Paylaşılan Makaleler</h3>*@
            @*@await Html.PartialAsync("_LayoutHeaderPartial")*@
            <div class="row">
                @*inner-sec*@
                <!--left-->
                @RenderBody()
                <!--//left-->
                <!--right-->
                @await Component.InvokeAsync("RightSideBar")
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->
    <!--footer-->
    @await Html.PartialAsync("_LayoutFooterPartial")
    <!---->

    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    @await Html.PartialAsync("_LayoutJsPartial")
    @await RenderSectionAsync("Scripts", false) @*Buradaki false degerimizin amaci RenderSection'in' tüm sayfalarda bulunmasini engellemek. Tüm js dosya yollari bu alanin üzerinde olmalidir *@
</body>

</html>


